# Normaliza texto por padrão
* text=auto

# Código: sempre LF (evita ruído/diffs entre Windows/Linux/Mac)
*.js    text eol=lf
*.ts    text eol=lf
*.jsx   text eol=lf
*.tsx   text eol=lf
*.json  text eol=lf
*.html  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.sh    text eol=lf
*.groovy text eol=lf
*.xml   text eol=lf
*.xsl   text eol=lf
*.xsd   text eol=lf
*.edmx  text eol=lf
*.xslt  text eol=lf
*.mmap  text eol=lf
*.propdef text eol=lf
*.project text eol=lf
*.iflw  text eol=lf

# Windows scripts: CRLF (necessário pra rodar bem no Windows)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binários/imagens: nunca tratar como texto
*.png  -text
*.jpg  -text
*.jpeg -text
*.gif  -text
*.webp -text
*.ico  -text
*.pdf  -text
*.zip  -text
*.jar  -text
*.exe  -text
*.dll  -text

# --- GitHub Linguist (mantém os seus) ---
*.iflw    linguist-language=XML
*.xsl     linguist-language=XML
*.xsd     linguist-language=XML
*.edmx    linguist-language=XML
*.xslt    linguist-language=XML
*.mmap    linguist-language=XML
*.propdef linguist-language=XML
*.project linguist-language=XML
